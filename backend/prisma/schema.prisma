generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model events {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  date    String?
  venueId String  @db.ObjectId
}

model reactions {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  emoji    String
  reviewId String
  userIds  String[]
}

model reviews {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt String
  eventId   String @db.ObjectId
  /// Multiple data types found: Float: 57.1%, Int: 42.9% out of 7 sampled entries
  rating    Json
  text      String
  userId    String @db.ObjectId
}

model users {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  displayName String
  email       String
  photoUrl    String
}

model venues {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  location String
  name     String
  website  String
}
